{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rust: build ARM",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--target=armv7-unknown-linux-gnueabihf"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Rust: format",
            "type": "shell",
            "command": "cargo",
            "args": [
                "fmt"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}